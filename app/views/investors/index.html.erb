<p id="notice"><%= notice %></p>

<h1>Listing Investors</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Address</th>
      <th>Zip code</th>
      <th>Town</th>
      <th>Country</th>
      <th>Fiscal number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @investors.each do |investor| %>
      <tr>
        <td><%= investor.full_name %></td>
        <td><%= investor.address %></td>
        <td><%= investor.zip_code %></td>
        <td><%= investor.town %></td>
        <td><%= investor.country %></td>
        <td><%= investor.fiscal_number %></td>
        <td><%= link_to 'Show', investor %></td>
        <td><%= link_to 'Edit', edit_investor_path(investor) %></td>
        <td><%= link_to 'Destroy', investor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

